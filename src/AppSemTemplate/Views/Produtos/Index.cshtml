@model IEnumerable<AppSemTemplate.Models.Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Imagem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Valor)
            </th>
            <th>Ações</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Imagem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Valor)
            </td>
            <td>
                <botao tipo-botao="Editar" route-id="@item.Id"></botao>
                <botao tipo-botao="Detalhar" route-id="@item.Id"></botao>
                <botao tipo-botao="Excluir" route-id="@item.Id"></botao>

@*                 <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">
                        <i class="fas fa-pencil"></i>
                </a> 
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">
                        <i class="fas fa-search"></i>
                    </a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" >
                        <i class="fas fa-trash"></i>
                </a> *@
            </td>
        </tr>
}
    </tbody>
</table>

